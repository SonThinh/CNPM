@model KaraokeWeb.Models.EF.Drink

@{
	ViewBag.Title = "Chỉnh sửa";
	Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{

}

@section jsFooter{
	<script>
		$('#btnSelectImage').on('click', function (e) {
			e.preventDefault();
			var finder = new CKFinder();
			finder.selectActionFunction = function (url) {
				$('#txtImage').val(url);
			};
			finder.popup();
		})
	</script>
}
<div class="sign-up">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<h3 class="text-uppercase">Cập nhật đồ uống</h3>
		<p class="creating">
			Cập nhật thức uống (chỉ Admin được cập nhật)
		</p>

		<h6>Thông tin</h6>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model => model.drink_id)
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Tên* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.drink_name, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.drink_name, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Loại món* :</h4>
				</div>
				<div class="sign-up2">
					@Html.DropDownListFor(model => model.menu_id, null, new { @class = "form-control", id = "dropdown" })
					@Html.ValidationMessageFor(model => model.menu_id, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Giá* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.price, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Trạng thái* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.status, new { @class = "form-control" })
					<p class="creating">(0 là hết,1 là còn)</p>
					@Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="sub_home">
			<div class="sub_home_left">
				<button type="submit">Cập nhật</button>
			</div>
			<div class="sub_home_right">
				@Html.ActionLink("Quay lại trang chủ", "Index", "DrinkMenu")
			</div>
			<div class="clearfix"> </div>
		</div>
	}
</div>

