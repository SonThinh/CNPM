@model KaraokeWeb.Models.EF.Karaoke

@{
	ViewBag.Title = "Chỉnh sửa";
	Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{

}

@section jsFooter{
	<script>
		$('#btnSelectImage').on('click', function (e) {
			e.preventDefault();
			var finder = new CKFinder();
			finder.selectActionFunction = function (url) {
				$('#txtImage').val(url);
			};
			finder.popup();
		})
	</script>
}
<div class="sign-up">
	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<h3 class="text-uppercase">cập nhật quán karaoke</h3>
		<p class="creating">
			Cập nhật thông tin quán karaoke (chỉ Admin được cập nhật)
		</p>

		<h6>Thông tin quán</h6>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		@Html.HiddenFor(model=>model.kara_id)
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Tên* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.kara_name, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.kara_name, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Địa chỉ* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.address, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Số điện thoại* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.phone, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Hình* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.images, new { @class = "form-control", id = "txtImage" })
					<a id="btnSelectImage" href="#">Chọn ảnh</a>
					@Html.ValidationMessageFor(model => model.images, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="sub_home">
			<div class="sub_home_left">
				<button type="submit">Cập nhật thông tin</button>
			</div>
			<div class="sub_home_right">
				@Html.ActionLink("Quay lại trang chủ", "Index", "Karaoke")
			</div>
			<div class="clearfix"> </div>
		</div>
	}
</div>

