@model KaraokeWeb.Models.EF.Menu

@{
	ViewBag.Title = "Create";
	Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{

}
@section jsFooter{
	<script>
		$('#btnSelectImage').on('click', function (e) {
			e.preventDefault();
			var finder = new CKFinder();
			finder.selectActionFunction = function (url) {
				$('#txtImage').val(url);
			};
			finder.popup();
		})
	</script>
}
<div class="sign-up">
	@using (Html.BeginForm("Create", "Menu", FormMethod.Post))
	{
		@Html.AntiForgeryToken()
		<h3 class="text-uppercase">Tạo thực đơn</h3>
		<p class="creating">
			Tạo thực đơn (chỉ Admin được tạo)
		</p>

		<h6>Thông tin</h6>
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Loại món* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.kind, new { @class = "form-control" })
					@Html.ValidationMessageFor(model => model.kind, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="form-group">
			<div class="sign-u">
				<div class="sign-up1">
					<h4>Hình ảnh* :</h4>
				</div>
				<div class="sign-up2">
					@Html.TextBoxFor(model => model.images, new { @class = "form-control", id = "txtImage" })
					<a id="btnSelectImage" href="#">Chọn ảnh</a>
					@Html.ValidationMessageFor(model => model.images, "", new { @class = "text-danger" })
				</div>
				<div class="clearfix"> </div>
			</div>
		</div>
		<div class="sub_home">
			<div class="sub_home_left">
				<button type="submit">Tạo</button>
			</div>
			<div class="sub_home_right">
				@Html.ActionLink("Quay lại trang chủ", "Index", "Menu")
			</div>
			<div class="clearfix"> </div>
		</div>
	}
</div>

