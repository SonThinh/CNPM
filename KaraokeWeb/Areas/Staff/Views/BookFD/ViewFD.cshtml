					<th>Giá</th>
					<th>Tổng cộng</th>
					<th>Thao tác</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in listDDetail)
				{
					<tr id=" row_@item.bill_id">
						<td>@item.bill_id</td>
						<td>@item.drink_id</td>
						<td>@item.amount</td>
