
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
@section inner{
	<!-- inner page banner -->
	<section class="inner_banner">
		<div class="dot1">
		</div>
	</section>
	<!-- inner page banner -->
}

<section class="contact py-5">
	<h1 class="heading text-center text-uppercase mb-5">Liên hệ </h1>
	<div class="map">
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d47491.005288533226!2d-88.04112836481997!3d41.93181507965691!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x880fad7e1d6ddc3d%3A0xbd8ff504d27e8e63!2sAddison%2C+IL%2C+USA!5e0!3m2!1sen!2sin!4v1522131822507"></iframe>
		<div class="main_grid_contact">
			<div class="form">
				<h2 class="text-capitalize mb-2">Gửi mail cho chúng tôi</h2>
				<form action="#" method="post">
					<div class="input-group">
						<input type="text" class="margin2" name="name" placeholder="Họ" required="">
						<input type="text" name="name" placeholder="Tên" required="">
					</div>
					<div class="input-group">
						<input type="email" class="margin2" name="email" placeholder="mail@example.com" required="">
						<input type="text" name="number" placeholder="Số điện thoại" required="">
					</div>
					<div class="input-group">
						<textarea rows="4" cols="50" placeholder="lời nhắn"></textarea>
					</div>
					<div class="input-group1">
						<input type="submit" value="Gửi">
					</div>
				</form>
			</div>
			<div class="w3ls-contact">
				<h3 class="text-capitalize mb-3">Thông tin liên hệ</h3>
				<address>
					<h3 class="my-3"><span>Chi nhánh 1 : Kingdom </span> </h3>
					<p class="my-3"><span class="fas fa-map-marker-alt"></span> 000 đường 0 phường 0 quận 0 TPHCM<span> </span> </p>
					<p class="my-3"><span class="fas fa-mobile-alt"></span> 09000000 </p>
				</address>
				<address>
					<h3 class="my-3"><span>Chi nhánh 2: Kingdom 1 </span> </h3>
					<p class="my-3"><span class="fas fa-map-marker-alt"></span> 001 đường 1 phường 1 quận 1 TPHCM<span></span> </p>
					<p class="my-3"><span class="fas fa-mobile-alt"></span> 09000001 </p>
				</address>
				<div class="w3_agileits_social_media mt-3 text-center">
					<ul>
						<li><a href="#" class="wthree_facebook"><i class="fab fa-facebook-f" aria-hidden="true"></i></a></li>
						<li><a href="#" class="wthree_twitter"><i class="fab fa-twitter" aria-hidden="true"></i></a></li>
						<li><a href="#" class="wthree_dribbble"><i class="fab fa-dribbble" aria-hidden="true"></i></a></li>
						<li><a href="#" class="wthree_behance"><i class="fab fa-behance" aria-hidden="true"></i></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>